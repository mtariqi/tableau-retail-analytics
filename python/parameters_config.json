{
  "parameters": [
    {
      "name": "Date Range",
      "type": "date_range",
      "default_start": "2014-01-01",
      "default_end": "2017-12-31",
      "purpose": "Filter data by order date"
    },
    {
      "name": "Selected Regions",
      "type": "multiple_values",
      "values": ["Central", "East", "South", "West"],
      "default": "All",
      "purpose": "Filter by geographic region"
    },
    {
      "name": "Selected Categories",
      "type": "multiple_values",
      "values": ["Furniture", "Office Supplies", "Technology"],
      "default": "All",
      "purpose": "Filter by product category"
    },
    {
      "name": "Customer Segments Filter",
      "type": "multiple_values",
      "values": ["Champions", "Loyal Customers", "Potential Loyalists", "At Risk", "Lost Customers"],
      "default": "All",
      "purpose": "Filter by customer segment"
    },
    {
      "name": "Profit Margin Threshold",
      "type": "float",
      "min": 0,
      "max": 0.5,
      "step": 0.01,
      "default": 0.1,
      "purpose": "Set minimum acceptable profit margin"
    },
    {
      "name": "Discount Range",
      "type": "range",
      "min": 0,
      "max": 0.8,
      "step": 0.05,
      "default_min": 0,
      "default_max": 0.8,
      "purpose": "Filter by discount percentage"
    },
    {
      "name": "Top N Products",
      "type": "integer",
      "min": 5,
      "max": 50,
      "step": 5,
      "default": 10,
      "purpose": "Number of products to show in top performers"
    },
    {
      "name": "Forecast Periods",
      "type": "integer",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 6,
      "purpose": "Number of months to forecast"
    }
  ]
}
